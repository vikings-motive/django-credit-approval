# Production Environment Variables
# COPY THIS FILE TO .env.prod AND FILL IN ACTUAL VALUES

# Database Configuration
POSTGRES_DB=credit_approval_prod
POSTGRES_USER=credit_prod_user
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_IN_PRODUCTION
DATABASE_URL=postgresql://credit_prod_user:CHANGE_THIS_STRONG_PASSWORD_IN_PRODUCTION@db:5432/credit_approval_prod
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Django Configuration
SECRET_KEY=CHANGE_THIS_GENERATE_NEW_SECRET_KEY_FOR_PRODUCTION
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,web

# Redis Configuration
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Application Settings
ENVIRONMENT=production
LOG_LEVEL=WARNING

# CORS Settings (adjust for your frontend domain)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Security Settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY

# Email Configuration (for production notifications)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Sentry Configuration (for error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# API Rate Limiting (adjust based on your needs)
API_RATE_LIMIT_ANON=50/hour
API_RATE_LIMIT_USER=500/hour

# Gunicorn Settings
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_MAX_REQUESTS=1000
GUNICORN_MAX_REQUESTS_JITTER=50

# Monitoring and Metrics
PROMETHEUS_ENABLED=True
PROMETHEUS_PORT=8001

# Backup Settings
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM