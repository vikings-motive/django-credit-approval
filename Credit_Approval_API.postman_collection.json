    {
      "name": "Loan Creation",
      "item": [
        {
          "name": "Create Loan - Valid",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 201 or 200\", function () {",
                  "    pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
                  "});",
                  "",
                  "var jsonData = pm.response.json();",
                  "if (jsonData.loan_approved) {",
                  "    pm.test(\"Loan is approved\", function () {",
                  "        pm.expect(jsonData.loan_approved).to.be.true;",
                  "        pm.environment.set(\"loan_id\", jsonData.loan_id);",
