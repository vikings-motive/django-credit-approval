            "body": {
              "mode": "raw",
              "raw": "{\n  \"customer_id\": {{customer_id}},\n  \"loan_amount\": 100000,\n  \"interest_rate\": 12,\n  \"tenure\": 12\n}"
            },
            "url": {
              "raw": "{{base_url}}/create-loan",
              "host": ["{{base_url}}"],
              "path": ["create-loan"]
